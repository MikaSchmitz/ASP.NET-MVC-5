@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count() == 0)
{
    <p>No movies were found</p>
}
else
{
    @Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary btn-lg" })

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Movie</th>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details/" + movie.Id, "Movies")</td>
                    <td>@movie.Genre.Name</td>
                    <td>@Html.ActionLink("Edit", "Edit/" + movie.Id, "Movies")</td>
                </tr>
            }
        </tbody>
    </table>
}