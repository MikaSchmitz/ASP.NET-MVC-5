@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <p>No movies were found</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details/" + movie.Id, "Movies")</td>
                </tr>
            }
        </tbody>
    </table>
}