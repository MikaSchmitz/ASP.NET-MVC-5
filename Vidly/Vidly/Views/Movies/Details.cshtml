@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li><b>Genre:</b> @Model.Genre.Name</li>
    <li><b>Release Date:</b> @Model.ReleaseDateToString()</li>
    <li><b>Added Date:</b> @Model.AddedDateToString()</li>
    <li><b>Number in stock:</b> @Model.NumberInStock</li>
</ul>

