@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count() == 0)
{


    <p>No customers were found.</p>
}
else
{
    @Html.ActionLink("New Customer", "New", "Customers", new { @class= "btn btn-primary btn-lg" })

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Customer</th>
                <th>Discount rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Details/" + customer.Id, "Customers")</td>
                <td>@customer.MembershipType.Name</td>
                <td>@Html.ActionLink("Edit", "Edit/" + customer.Id, "Customers")</td>
            </tr>
            }
        </tbody>
    </table>
}
